{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./package",
    "lib": ["es2017", "es2016", "es2015"],
    "baseUrl": "./",
    "paths": {
      "@utils": ["./app/utils/index"],
      "@utils/*": ["./app/utils/*"],
      "@modules/*": ["./app/modules/*"],
      "@typings/*": ["./app/typings/*"],
      "@core/*": ["./core/*"]
    }
  }
}
